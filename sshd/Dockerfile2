# available at gist: 
#   https://gist.github.com/xbalaji/ecd428eb8ee48981cb24ac0c57c8d21b
#
################## Dockerfile ###################
# from
#   https://docs.docker.com/engine/examples/running_ssh_service/
#
# build command
#   docker build -f <Dockerfile> -t ubsshpy .
#

FROM ubuntu:16.04

RUN apt-get -y update && apt-get -y upgrade && apt-get install -y openssh-server python
RUN mkdir /var/run/sshd
RUN echo 'root:balajiv' | chpasswd
RUN sed -i 's/PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config

# SSH login fix. Otherwise user is kicked off after login
RUN sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

ENV NOTVISIBLE "in users profile"
RUN echo "export VISIBLE=now" >> /etc/profile

EXPOSE 22
CMD ["/usr/sbin/sshd", "-D"]

################## end - Dockerfile ###################
